# Database Configuration
# For local development (database running on host)
DATABASE_URL=postgresql://postgres:password@localhost:5432/shinzo_platform?sslmode=disable
# For Docker development (database running on host, accessed from container)
# DATABASE_URL=postgresql://postgres:password@host.docker.internal:5432/shinzo_platform?sslmode=disable

# Server Configuration
PORT=8000
LOG_LEVEL=info
TZ=UTC

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OTLP Configuration
MAX_PAYLOAD_SIZE=4mb
RATE_LIMIT_PER_MINUTE=1000
ENABLE_COMPRESSION=true
BATCH_TIMEOUT=5000
MAX_BATCH_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000
RATE_LIMIT_BY_KEY=true
ENABLE_IP_RATE_LIMIT=true


MAILGUN_API_KEY=

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/callback/github

FRONTEND_URL=http://localhost:3000
